@using E_Shop.SeoUrl
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<EntityLayer.Entites.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="slider">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active">   
                            <div class="col-sm-6">
                                <h1><span>MODA</span>-BURADA</h1>
                                <h2>MODANIN KALBİ BURADA ATIYOR</h2>
                                <p>İhtiyacın olan ürün burada burası senin kalbinde aramıza hoş geldin. </p>
                                <a href="/Home/Index" class="btn btn-success">HADİ BAŞLAYALIM</a>
                            </div>
                            <div class="col-sm-6">
                                <img src="~/eshop/images/home/girl1.jpg" class="girl img-responsive" alt="" />
                                <img src="~/eshop/images/home/pricing.png" class="pricing" alt="" />
                            </div>
                        </div>
                        <div class="item">
                            <div class="col-sm-6">
                                <h1><span>MODA</span>-BURADA</h1>
                                <h2>100% MEMNUNİYETİN ADRESİ</h2>
                                <p>MODA-BURADA HER ZAMAN SENİN HAKETTİGİN KALİTEYİ SUNMAK İÇİN ÇALIŞIR YETEKİ ALDIGIN ÜRÜNDEN MEMNUN KAL . </p>
                                <a href="/Home/Index" class="btn btn-success">HADİ BAŞLAYALIM</a>

                            </div>
                            <div class="col-sm-6">
                                <img src="~/eshop/images/home/girl2.jpg" class="girl img-responsive" alt="" />
                                <img src="~/eshop/images/home/pricing.png" class="pricing" alt="" />
                            </div>
                        </div>

                        <div class="item">
                            <div class="col-sm-6">
                                <h1><span>MODA</span>-BURADA</h1>
                                <h2>ÜCRETSİZ TESLİMAT</h2>
                                <p>MODA-BURADA HER ZAMAN SENİN ZAMANINA DEGER VERİR ZAMANIN BİZİN İÇİN DEGERLİ BU YUZDEN URUNLERİN SENİN KAPINA GİTSİN SEN DEĞİL. </p>
                                <a href="/Home/Index" class="btn btn-success">HADİ BAŞLAYALIM</a>
                            </div>
                            <div class="col-sm-6">
                                <img src="~/eshop/images/home/girl3.jpg" class="girl img-responsive" alt="" />
                                <img src="~/eshop/images/home/pricing.png" class="pricing" alt="" />
                            </div>
                        </div>

                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
   
</section><!--/slider-->

<section>
    <br />
    <div class="container">
        <div class="row">

            @*popüler ürünler*@


            @Html.Action("CategoryList", "Category")

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    @Html.Action("PopularProduct", "Product")

                  
                    <!--features_items-->
                    <h2 class="title text-center">ÜRÜNLERİMİZ</h2>
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">

                                        <a href="/Product/ProductDetails/@item.Id/@(Seo.AdresDuzenle(item.Name))"><img src="~/Content/Image/@item.Image" width="65" height="110" alt="" /></a>
                                        <h2>@item.Price</h2>
                                        <p>@item.Name</p>
                                        <a href="/Product/ProductDetails/@item.Id/@(Seo.AdresDuzenle(item.Name))" class="btn btn-default add-to-cart">Ürün Detay</a>
                                    </div>

                                </div>

                            </div>
                        </div>
                    }



                </div><!--features_items-->
                @Html.PagedListPager(Model, sayfa => Url.Action("Index", new { sayfa }), PagedListRenderOptions.Classic)
            </div>
           


        </div>
    </div>
</section>

