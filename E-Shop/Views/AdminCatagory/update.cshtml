@model EntityLayer.Entites.Category
@{
    ViewBag.Title = "update";
}



<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row" @*satr actık*@>
        <div class="col-md-6">
            @*sütün actık*@
            <form method="post">
                @*AdminCatagoryController de ki koşullarımızı aktşf attik*@
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })
                <div class="form-group">
                    <label>ad</label>
